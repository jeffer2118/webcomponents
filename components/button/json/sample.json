{
    "button-styles": 
        {
            "rounded": {
                "appearance": "none",
                "border": "0",
                "border-radius": "0.25rem",
                "cursor": "pointer",
                "display": "inline-block",
                "font-weight": "700",
                "margin-right": "0.5rem",
                "padding": "0.75rem 1.25rem",
                "text-align": "center",
                "text-decoration": "none",
                "background-color": "black"
            },
            "rectangular": {
                "appearance": "none",
                "border": "0",
                "border-radius": "0",
                "cursor": "pointer",
                "display": "inline-block",
                "font-weight": "700",
                "margin-right": "0.5rem",
                "padding": "0.75rem 1.25rem",
                "text-align": "center",
                "text-decoration": "none",
                "background-color": "black"
            },
            "unstyled":{
                "-webkit-font-smoothing": "inherit",
                "color": "#005ea2",
                "text-decoration": "underline",
                "background-color": "transparent",
                "border": "0",
                "border-radius": "0",
                "box-shadow": "none",
                "font-weight": "400",
                "margin": "0",
                "padding": "0",
                "text-align": "left"
            },
            "outlined":{
                "background-color": "transparent",
                "box-shadow": "inset 0 0 0 2px ${this.bgColor}",
                "appearance": "none",
                "border": "0",
                "border-radius": "0.25rem",
                "cursor": "pointer",
                "display": "inline-block",
                "font-weight": "700",
                "margin-right": "0.5rem",
                "padding": "0.75rem 1.25rem",
                "text-align": "center",
                "text-decoration": "none"
            }
        },
    "sizes":
        {
            "sm": "1rem",
            "md": "1.06rem",
            "lrg": "1.33rem",
            "xl": "1.66rem"
        }
}